@model CentralService.Injection.ISearchModel


<style>
    table thead tr {
        background-color: #363167;
        color: white;
    }

    tr.selected {
        background-color: #0194d9 !important;
        background-color: #0194d947 !important;
    }

    div.dataTables_wrapper {
        width: 87vw;
        margin: 0 auto;
    }

    .modal-open .modal {
        overflow-x: no-display;
        overflow-y: auto;
    }

    .odd {
        background-color: white !important;
    }

    .card-header {
        padding-top: .25rem;
        padding-bottom: .25rem;
    }

    .im-centered {
        margin: auto;
        max-width: 300px;
    }
    .modal-header {
        border-bottom-color: #363167;
        background-color: #0194D9;
        padding-top: 2px;
        color: white;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }

        .modal-header .modal-title {
            font-size: 1.5rem;
        }
</style>
<div class="modal right fade" id="search-modal" role="dialog">
    <div class="modal-dialog modal-lg" style="margin-top: 0;">
        <div class="modal-content">
            <div class="modal-header" style="padding-bottom: 0;padding-top: 8px;">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="padding-top: 0;padding-bottom:0">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "search-modal-form", name = "searchModelForm" }))
                {
                    <div class="card border-primary "
                         style="margin: 0 auto;float: none;margin-bottom: 10px;">
                        <div class="card-header text-primary">ข้อมูลการสอบถาม</div>
                        <div class="card-body" style="padding-bottom:0.8rem">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text">คำที่ค้นหา</label>
                                </div>
                                @Html.EditorFor(model => model.ValueSearch, new { htmlAttributes = new { @class = " form-control" } })
                                <div class="input-group-append">
                                    @Html.DropDownListFor(model => model.KeySearch, (SelectList)ViewBag.KeySearchDropDown, new { @class = "form-control", Style = "width: 150px;" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered nowrap" id="search-list" style="width:100%;font-size: 13px;">
                        <thead>
                            <tr>
                                <th>ประเภท</th>
                                <th>ทะเบียนรถยนต์</th>
                                <th>จังหวัด</th>
                                <th>รหัสลูกค้า</th>
                                <th>ชื่อลูกค้า</th>
                                <th>ยี่ห้อ</th>
                                <th>รุ่น</th>
                                <th>สี</th>
                                <th>เลขใมล์ล่าสุด</th>
                                <th>Blue No.</th>
                                <th>เบอร์โทรศัพท์</th>
                                <th>ติดต่อล่าสุด</th>
                            </tr>
                        </thead>
                    </table>
                }
            </div>
            <div class="modal-footer" style="display: block;">
                <div id="btn-group-1" class="btn-group" data-toggle="buttons">
                    <button id="btn-new-customer-car" type="button" class="btn btn-success">
                        สร้างข้อมุลลูกค้าและรถ
                    </button>
                    @*<button id="btn-new-customer" type="button" class="btn btn-success">สร้างข้อมูลลูกค้า</button>*@
                </div>
                <div class="im-centered">
                    <div id="btn-group-2" class="btn-group btn-group-2" data-toggle="buttons">
                        <button id="btn-new-car" type="button" class="btn btn-success">สร้างข้อมูลรถ</button>
                        @*<button id="btn-new-sale-quote" type="button" class="btn btn-success">สร้างใบเสนอราคา</button>
                        <button id="btn-new-deposit" type="button" class="btn btn-success">สร้างใบรับเงินมัดจำ</button>
                        <button id="btn-new-sale-order" type="button" class="btn btn-success">สร้างใบสั่งขาย</button>*@
                    </div>
                </div>
                <div class="im-centered">
                    <div id="btn-group-3" class="btn-group btn-group-2" data-toggle="buttons">
                        <button id="btn-profile" type="button" class="btn btn-info">
                            ข้อมูลส่วนตัว
                        </button>
                        <button id="btn-vehicle" type="button" class="btn btn-info">
                            ข้อมูลรถยนต์
                        </button>
                        <button id="btn-used-history" type="button" class="btn btn-info">
                            ประวัติใช้บริการ
                        </button>
                        <button id="btn-money-history" type="button" class="btn btn-info">
                            ประวัติการเงิน
                        </button>
                        <button id="btn-product" type="button" class="btn btn-info">
                            สินค้า/บริการ
                        </button>
                        <button id="btn-next-service" type="button" class="btn btn-info">
                            บริการครั้งต่อไป
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>