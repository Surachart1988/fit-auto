@model newHQ.Models.MessageViewModel
@{
    ViewBag.Title = "Create";
}
<style>
    .input-group-prepend label {
        width: 8vw;
    }
    .swal-icon img {
    max-width:20%;
    max-height:20%;
    }
</style>

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-6">
            <div class="form-group row">
                @Html.HiddenFor(model=>model.DocType)
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-4", @maxlength = 110 })
                <div class="col-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @maxlength = 110 } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.FileName, htmlAttributes: new { @class = "control-label col-4" })
                <div class="col-8">
                    @Html.TextBoxFor(model => model.Files, "", new { @type = "file", @multiple = "multiple" })
                    @Html.ValidationMessageFor(model => model.Files, "", new { @class = "text-danger" })
                    <label style="color:red;font-size:10px;" id="filesSize"></label>
                    <input type="hidden" id="hdfFilesSize">
                </div>
            
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-4" })
                <div class="col-8">
                    @Html.DropDownListFor(model => model.Status, (SelectList)ViewBag.MessageStatusDropDown, new { @class = "form-control " })
                </div>
        
            </div>
        </div>

        <div class="col-6">
            <div class="form-group row">
           
                @Html.LabelFor(model => model.DateRange, htmlAttributes: new { @class = "control-label col-4 ",@style= "text-align: right;" })
                <div class="col-8">
                    @Html.EditorFor(model => model.DateRange, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.DateRange, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.StartDate)
                    @Html.HiddenFor(model => model.EndDate)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-2" })
        <div class="col-8">
            @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @rows = "1" } })
        </div>
    </div>
</div>

