            </th>*@
                                                                <td class="normal2-black"></td>
                                                                <td class="normal2-black"></td>
                                                                <td class="normal2-black"></td>
                                                            </tr>
                                                            <tr>

                                                                @{
                                                                    var j = 1;
                                                                    for (int i = 0; i < Model.Dealers.Count; i++)
                                                                    {

                                                                        if (i % 3 == 0 && i != 0  )
                                                                        {

                                                                        <tr></tr>
                                                                    }

                                                                        <td class="normal2-black" style="text-align: right; width: 1%">

                                                                            @Html.CheckBoxFor(x => Model.Dealers[i].IsCheck, new { style = "opacity: 1;" })
                                                                        </td>

                                                                        <td class="normal2-black dealer_label" style="text-align: left; width: 32%">
                                                                            @Html.HiddenFor(m => Model.Dealers[i].plant_no)
                                                                            @Html.HiddenFor(m => Model.Dealers[i].dealercode)
                                                                            @Html.HiddenFor(m => Model.Dealers[i].DealerName)

                                                                            @Html.Label("Dealers[" + i + "].IsCheck", Model.Dealers[i].plant_no + " - " + Model.Dealers[i].DealerName)
                                                                        </td>

                                                                        
                                                                    


                                                                    j++;



                                                                }@*End For*@

                                                                @*@Html.DisplayFor(x => Model.Dealers[i].plant_no) @Html.Raw(" - ") @Html.DisplayFor(x => Model.Dealers[i].DealerName)*@
                                                                }<!-- End @**@ -->
                                                                </tr>

                                                                <tr height="30">
                                                                    <td align="center" colspan="6"></td>
                                                                </tr>
                                                                <tr>
                                                                    <td align="center" colspan="6">
                                                                        <input type="hidden" name="loop_num" value="3">
                                                                        <input type="hidden" name="act" value="add">
                                                                        <input type="hidden" name="pro_id" value="">

                                                                        <input class="button sucsess" type="button" name="btnSaveBranch" id="btnSaveBranch" value="บันทึก">
                                                                        &nbsp;<input class="button danger" type="button" name="btnClose" style="width:53.75px" data-dismiss="modal" value="ยกเลิก">
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                    </table>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
