@model CentralService.Models.ExtraPromotionModel

<style>
    body {
        font-size: 14px;
    }

    input, select {
        font-size: 14px;
        line-height: 16px;
        font-family: Tahoma, 'Open Sans Light', Verdana, Arial, Helvetica, sans-serif;
    }

    .table tr td {
        border-bottom: 1px solid #eeeeee;
        padding: 4px;
        font-size: 14px;
    }

    .button {
        padding: 2px 8px;
        text-align: center;
        /*vertical-align: middle !important;*/
        border: 1px transparent solid;
        color: #ffffff;
        border-radius: 0;
        cursor: pointer;
        display: inline-block;
        outline: none;
        font-family: 'Segoe UI Light_', 'Open Sans Light', Verdana, Arial, Helvetica, sans-serif;
        font-size: 14px;
        /*line-height: 16px;*/
        margin: auto;
    }

    .sucsess {
        background-color: #60a917;
        border: 1px solid #ffffff;
    }

    .default {
        background-color: #f44336;
    }

    .warning {
        background-color: #ff6a00;
    }

    .info {
        background-color: #0094ff;
    }

    .green {
        background-color: #4CAF50;
    }

    .danger {
        background-color: #f55555;
    }

    .primary1 {
        background-color: #3F51B5;
    }

    .cyan {
        background-color: #00BCD4;
    }

    .dealer_label label {
        display: inline-block;
        font-weight: 100;
    }

    .btn_mini {
        padding: 2px;
        text-align: center;
        vertical-align: top !important;
        color: #ffffff;
        cursor: pointer;
        font-family: 'Segoe UI Light_', 'Open Sans Light', Verdana, Arial, Helvetica, sans-serif;
        font-size: 14px;
        /*line-height: 16px;*/
        border: 1px solid #ffffff;
    }
</style>

