
@{
    ViewBag.Title = "LazadaModal";
}

<!-- Modal -->
<div class="modal right fade" id="lazadaModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">LAZADA</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>

            <div class="modal-body">
                <div class="card text-white bg-info calculator-card ">
                    <div class="card-body card-lg">
                        <p class="text-details">จำนวนเงิน (บาท)</p>
                        <input id="txtPaymentLazada" class="input-no-bg text-result-lg money" />
                    </div>
                </div>
                <div class="row">
                    <div class="offset-2 col-8 credit-form">
                        <label>เอกสารอ้างอิง</label>
                        <input type="text" id="txtReferenceLazadaNo" class="input-credit-card form-control form-control-sm">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">หมายเหตุ</span>
                    </div>
                    <input type="text" class="form-control" id="txtLazadaNote" aria-describedby="basic-addon1">
                </div>
                <button type="button" id="btnLazadaReceiveMoney" class="btn btn-success">รับเงิน</button>
            </div>
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div>

