
@{
    ViewBag.Title = "BlueCardModal";
}

<!-- Modal -->
<div class="modal right fade" id="blueCardModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Blue Card</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="offset-2 col-8 bluecard-form">
                        <div class="form-group row">
                            <label class="col-4 col-form-label col-form-label-sm">ชื่อลูกค้า</label>
                            <input type="text" class="form-control form-control-sm col-8" id="txtBlueCardName" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group row">
                            <span class="col-4 col-form-label col-form-label-sm">รหัส Blue Card</span>
                            <input type="text" class="form-control form-control-sm col-8" id="txtBlueCardNo" aria-describedby="basic-addon1" maxlength="16">
                        </div>
                        <div class="form-group row">
                            <span class="col-4 col-form-label col-form-label-sm">คะแนนสะสม</span>
                            <input type="text" class="form-control form-control-sm number-Integer col-8" id="txtBalancePoint" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group row">
                            <span class="col-4 col-form-label col-form-label-sm">ใช้คะแนน</span>
                            <input type="text" class="form-control form-control-sm number-Integer col-8" id="txtUsePoint" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group row">
                            <span class="col-4 col-form-label col-form-label-sm">มูลค่าเงินสด</span>
                            <input type="text" class="form-control form-control-sm money col-8" id="txtBlueCardMoney" aria-describedby="basic-addon1">
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">หมายเหตุ</span>
                    </div>
                    <input type="text" class="form-control" id="txtBlueCardNote" aria-describedby="basic-addon1">
                </div>
                <button type="button" id="btnBlueCardReceiveMoney" class="btn btn-success">ยืนยัน</button>
            </div>

        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div>

