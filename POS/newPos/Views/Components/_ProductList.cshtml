@model CentralService.Models.ProductSearchModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "product-form", name = "productForm" }))
{
    <div class="form-group row"></div>
    <div class="row">
        @Html.Partial("~/Views/Components/_ProductFilter.cshtml", new CentralService.Models.ProductFilterModel())
    </div>
    <div class="form-group row"></div>
    <div class="row">
        <div class="col-sm-3">
            <div class="input-group input-daterange">
                <span class="input-group-addon">
                    สถานะสินค้า :
                </span>
                @Html.DropDownListFor(model => model.pro_status, new List<SelectListItem>
                    {
                        new SelectListItem() { Text = "สถานะสินค้าปกติ", Value = "0"},
                        new SelectListItem() { Text = "สถานะสินค้ายกเลิกการขาย", Value = "1"},
                        new SelectListItem() { Text = "สถานะสินค้ายกเลิกซื้อ", Value = "2"},
                        new SelectListItem() { Text = "สถานะสินค้าห้ามเคลื่อนไหว", Value = "3"},
                        new SelectListItem() { Text = "สถานะสินค้ายกเลิก", Value = "4"},
                        new SelectListItem() { Text = "สถานะสินค้ายกเลิกถาวร", Value = "5"}
                    }, new { @class = "form-control"/*, @style = "width: 130px;"*/ })
            </div>
        </div>
        <div class="col-sm-7">
            <div class="input-group">
                <span class="input-group-addon" style="border: 0;">
                    ค้นหา :
                </span>
                @Html.EditorFor(model => model.keysearch, new { htmlAttributes = new { @class = "form-control", placeholder = "รหัสสินค้า/Part No./ชื่อสินค้า/ประเภทสินค้า/ยี่ห้อสินค้า/รุ่นสินค้า/ขนาดสินค้า/หมายเหตุ" } })
            </div>
        </div>
        <div class="col-sm-2">
            <div>
                <button id="btn_search" type="button" class="btn btn-success">ค้นหา</button>
                <input id="btn_clear" type="button" name="btn_clear" value="เคลียร์" class="btn btn-default">
            </div>
        </div>
    </div>
    <div class="form-group row"></div>
    <div class="row">
        <table class="table product-style" id="gv_product-list" style="width:100%;font-size: 13px;">
            <thead>
                <tr style="box-shadow: none;">
                    <th>รหัสสินค้า</th>
                    <th>Part Number</th>
                    <th>ชื่อสินค้า</th>
                    <th>ประเภทสินค้า</th>
                    <th>ยี่ห้อสินค้า</th>
                    <th>รุ่นสินค้า</th>
                    <th>ขนาดสินค้า</th>
                    <th>จำนวน</th>
                    <th>Stock Online</th>
                </tr>
            </thead>
            <tbody style="font-size:13px"></tbody>
        </table>
    </div>
}