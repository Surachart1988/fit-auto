<!-- Modal -->
<div class="modal fade" id="CloseModal" tabindex="-1" data-toggle="modal" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document" style="height:40vh;">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">แจ้งเตือนการปิดงวด</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="col-md-12" style="text-align:center;font-size:1.5vw">
                        <div class="card-body card-lg">
                            <p id="textalert" class="text-details" style="font-size:3vw;text-align:center;"></p>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-6" style="text-align:right">
                        <label id="msg" style="color:#ff0000"></label>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-md-12" style="text-align:center">
                    <button type="button" id="btnClose" class="btn btn-lg btn-success" data-dismiss="modal">ปิด</button>
                </div>
            </div>
                 
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div>

<script>
    $(document).ready(function () {

        $('#OpenBatchBlueCardModal').on('shown.bs.modal', function () {
            $('#txtPaymentMoneyCash').focus();
            $('#txtPaymentMoneyCash').val('0');
          //  $('#txtPaymentMoneyCash').click();
           
        });

        $('#txtPaymentMoneyCash').click(function () {
            if (+$(this).val() == 0) {
                $(this).val('');
            }
        });

        $('#btnNext').hide();
        $('#btnStart').prop('disabled', true);
        $('#txtPaymentMoneyCash').keyup(function () {
            if ($(this).val() > 0) {
                $('#btnStart').prop('disabled', false);
            } else {
                $('#btnStart').prop('disabled', true);
            }
        });

    });

    $('#btnNext').on('click', function () {
        $('#txtPaymentMoneyCash').val('0');
        $('#msg').text('');
        $('#btnNext').hide();
        $('#OpenBatchBlueCardModal').modal('hide');
        $('body').removeClass('modal-open');
        $('.modal-backdrop').remove();

    });
</script>